@model Developir.Web.Models.ContactFormModel

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Contact Us</h1>
    
    <form asp-controller="Contact" asp-action="Index" method="post" class="max-w-lg">
        <div class="mb-4">
            <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2">Name</label>
            <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2">Email</label>
            <input asp-for="Email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Organization" class="block text-gray-700 text-sm font-bold mb-2">Organization</label>
            <input asp-for="Organization" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            <span asp-validation-for="Organization" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-6">
            <label asp-for="Message" class="block text-gray-700 text-sm font-bold mb-2">Message</label>
            <textarea asp-for="Message" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" rows="4"></textarea>
            <span asp-validation-for="Message" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Send Message
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}